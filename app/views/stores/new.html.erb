<div class="row title_band">
    <div class="page_title">
        <h1>Set Up Retail Store</h1>            
    </div>
    <div class="title_help" id="retails_store_setup"></div>       
</div>

<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

<!-- error messages - associated with form start--> 
            <%= render :partial => "form_error", :locals => {:item => @company} %>

<!-- form column start-->
            <div class="row">
                <%= form_for @company, url: [@company, :store], method: :post do |f| %>
                    <%= f.hidden_field :company_id, :value => current_user.company_id %>
                    <fieldset>

                        <!-- form input[text] --> 
                        <div class="form_tooltip" id="company_retail_subdomain"></div>
                        <label class="label_120">Subdomain for store:*</label>
                        <span>
                            <%= f.text_field :retail_subdomain, autofocus: true %>
                        </span></br>
                        
                    </fieldset>
            </div>
<!-- column footer start--> 
            <div class="row">
                <div class="form_footer">
                    <%= f.submit "save"%>
                    <%= link_to "cancel", dashboards_path %>
                </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border blank_column"></div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column"></div>
    </div>
</div>
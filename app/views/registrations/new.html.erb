<% if current_user.role == "admin" %>
    <h2>Create New Account</h2>
<% else %>
    <h2>Create New Employee</h2> 
<% end %>

<div class="row-fluid">
    <div class="span4 well">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
            <div class="form-group">
                <label class="control-label">First Name        
                    <div class="help_tooltip" id="1"></div>
                </label> 
                <%= f.text_field :first_name, autofocus: true, :class=>"form-control"  %>
            </div>

            <div class="form-group">
                <label class="control-label">Surname         
                    <div class="help_tooltip" id="1"></div>
                </label> 
            <%= f.text_field :surname, :class=>"form-control"  %>
            </div>
            
            <div class="form-group">
                <label class="control-label">Email       
                    <div class="help_tooltip" id="2"></div>
                </label> 
            <%= f.email_field :email, :class=>"form-control"  %>
            </div>
  
            <% if current_user.role == "admin" %>          
                <%= f.fields_for(:company) do |builder| %>
                <div class="form-group">
                    <label class="control-label">Company Name         
                        <div class="help_tooltip" id="3"></div>
                    </label> 
                    <%= builder.text_field :name, :class=>"form-control"  %>
                </div>                      
                <% end %>
                <%= f.hidden_field :role, :value => "owner" %>
            <% else %>            
                <%= f.hidden_field :company_id, :value => current_user.company_id %>
                <%= f.hidden_field :role, :value => "employee" %>
            <% end %>
  
            <div class="form-group">
                <label class="control-label">Password        
                    <div class="help_tooltip" id="4"></div>
                </label> 
            <%= f.password_field :password, autocomplete: "off", :class=>"form-control"  %>
            </div>
                        
            <div class="form-group">
                <label class="control-label">Confirm Password</label>          
                    <div class="help_tooltip" id="5"></div>
                </label> 
            <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"form-control"  %>
            </div>

            <% if current_user.role == "admin" %>
                <div class="form-actions">
                    <%= f.submit "Create Account", class: "btn btn-success" %>
                </div>    
            <% else %>
                <div class="form-actions">
                    <%= f.submit "Create Employee", class: "btn btn-success" %>
                </div> 
            <% end %>

        <% end %>
    </div>
</div>
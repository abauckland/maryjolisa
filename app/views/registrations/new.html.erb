<% if current_user.role == "admin" %>
    <h2>Create New Account</h2>
<% else %>
    <h2>Create New Employee</h2> 
<% end %>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.text_field :first_name, autofocus: true %>

  <%= f.text_field :surname %>

  <%= f.email_field :email %>
  
  <% if current_user.role == "admin" %>
  
    <%= f.fields_for(:company) do |builder| %>    
        <%= builder.text_field :name, label: "Company Name"   %>
    <% end %>
    <%= f.hidden_field :role, :value => "owner" %>
  <% else %>    

    <%= f.hidden_field :company_id, :value => current_user.company_id %>
    <%= f.hidden_field :role, :value => "employee" %>
  <% end %>
  
  <%= f.password_field :password, autocomplete: "off" %>

  <%= f.password_field :password_confirmation, autocomplete: "off" %>

<% if current_user.role == "admin" %>
    <%= f.submit "Create Account", class: "btn btn-success" %>
<% else %>
    <%= f.submit "Create Employee", class: "btn btn-success" %>
<% end %>

<% end %>
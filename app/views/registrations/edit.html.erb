<div class="page_title">
    <h1>Edit <%= resource_name.to_s.humanize %></h1>
</div>

<div class="content">
    <div class="column_linked_container">

       <%= devise_error_messages! %>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="sub_column_linked_1">
                 <div class="column_content">
                        <div class="column_form">

                            <div class="column_form_item">
                                <label class="column_form_label">First Name:</label>                        
                                <div class="column_form_input"><%= f.text_field :first_name, autofocus: true %></div>
                                <div class="column_help_tooltip" id="supplier_address_1"></div>    
                            </div>
                            <div class="column_form_item">
                                <label class="column_form_label">Surname:</label>                        
                                <div class="column_form_input"><%= f.text_field :surname %></div>
                                <div class="column_help_tooltip" id="supplier_address_1"></div>    
                            </div>
                            <div class="column_form_item">
                                <label class="column_form_label">Email:</label>                        
                                <div class="column_form_input"><%= f.email_field :email %></div>
                                <div class="column_help_tooltip" id="supplier_address_1"></div>    
                            </div>                            
                            <div class="column_form_item">
                                <label class="column_form_label">New Password:</label>
                                (leave blank if you don't want to change it)                        
                                <div class="column_form_input"><%= f.password_field :password, autocomplete: "off" %></div>
                                <div class="column_help_tooltip" id="supplier_address_1"></div>    
                            </div>  
                            <div class="column_form_item">
                                <label class="column_form_label">Confirm Password:</label>                        
                                <div class="column_form_input"><%= f.password_field :password_confirmation, autocomplete: "off" %></div>
                                <div class="column_help_tooltip" id="supplier_address_1"></div>    
                            </div>                              
                            <div class="column_form_item">
                                <label class="column_form_label">Current Password:</label>
                                (we need your current password to confirm your changes)                        
                                <div class="column_form_input"><%= f.password_field :current_password, autocomplete: "off" %></div>
                                <div class="column_help_tooltip" id="supplier_address_1"></div>    
                            </div>
                             
                        </div>
                </div>
        </div>
        
        <div class="sub_column_linked_2 column_linked_blank"></div> 
        <div class="sub_column_linked_3 column_linked_blank"></div>             
            
        <div class="column_linked_footer">
            <div class="column_line"></div>
            <div class="column_submit"><%= f.submit "save" %></div>
            <% end %>
        </div>
            
    </div>
</div>



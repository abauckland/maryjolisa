<div class="page_title">
    <h1>Create New Employee</h1>
</div>

<div class="content">
    <div class="column_linked_container">

       <%= devise_error_messages! %>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

            <%= f.hidden_field :role, :value => "employee" %>
            <%= f.hidden_field :company_id, :value => current_user.company_id %>

        <div class="sub_column_linked_1">
                 <div class="column_content">
                        <div class="column_form">

                            <div class="column_form_item">
                                <label class="column_form_label" style="width:112px">First Name:</label>                        
                                <div class="column_form_input"><%= f.text_field :first_name, autofocus: true %></div>
                                <div class="column_help_tooltip" id="user_address_1"></div>    
                            </div>
                            <div class="column_form_item">
                                <label class="column_form_label" style="width:112px">Surname:</label>                        
                                <div class="column_form_input"><%= f.text_field :surname %></div>
                                <div class="column_help_tooltip" id="user_address_1"></div>    
                            </div>
                            <div class="column_form_item">
                                <label class="column_form_label" style="width:112px">Email:</label>                        
                                <div class="column_form_input"><%= f.email_field :email %></div>
                                <div class="column_help_tooltip" id="user_address_1"></div>    
                            </div>                            

                            <div class="column_form_item">
                                <label class="column_form_label" style="width:112px">Password:</label>                        
                                <div class="column_form_input"><%= f.password_field :password, autocomplete: "off" %></div>
                                <div class="column_help_tooltip" id="supplier_address_1"></div>    
                            </div>  
                            <div class="column_form_item">
                                <label class="column_form_label" style="width:112px">Confirm Password:</label>                        
                                <div class="column_form_input"><%= f.password_field :password_confirmation, autocomplete: "off" %></div>
                                <div class="column_help_tooltip" id="supplier_address_1"></div>    
                            </div>                              
                             
                        </div>
                </div>
        </div>
        
        <div class="sub_column_linked_2 column_linked_blank"></div> 
        <div class="sub_column_linked_3 column_linked_blank"></div>             
            
        <div class="column_linked_footer">
            <div class="column_line"></div>
            <div class="column_submit"><%= f.submit "create account" %></div>
            <div class="column_cancel"><%= link_to "cancel", users_path %></di
            <% end %>
        </div>
            
    </div>
</div>

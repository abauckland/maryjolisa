<h1>Listing Employees</h1>

<table class="table table-striped table-hover" style="width : 100%" >
  <thead>
    <tr>
      <th>Name</th>
      <th width = 60px ></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td>
            <div class="btn-group-xs">
            <%= link_to 'Show', user_path(user), :class => "btn btn-primary" %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Employee', new_user_registration_path, :class => "btn btn-primary"  %>

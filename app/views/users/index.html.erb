<div class="page_title">
    <h1>Listing Employees</h1>
</div>


 <div class="table_content_with_title">
    <table>
      <thead>
        <tr>
          <th class="mob_cell">Name</th>
          <th width="20px" class="row_button"></th>
          <th width="20px" class="row_button"><%= link_to "", new_employee_path, class: 'line_new_icon', title: "create new account" %></th>
        </tr>
      </thead>
    </table>
    <div class="table_container">
        <table>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td class="mob_cell"><%= user.name %></td>
                <td width="20px" class="row_button"></td>
                <td width="20px" class="row_button"><%= link_to "", user_path(user), class: 'line_show_icon', title: "show full details" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
</div>

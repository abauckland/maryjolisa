<div class="row title_band">
    <div class="page_title">
        <h1>List of Employees</h1>
    </div>
    <div><%= link_to 'Add Employee', new_employee_path, class: "title_button"%></div>
</div>


<div class="row">
    <div class="col-1-1 column_1">
        <div class="border">
                                        
        <%= render :partial => "flash_notice" %>
                        
            <div class="row">
                <table>
                    <thead>
                        <tr>
                            <th class="mob_cell">Name</th>
                            <th class="row_button no_buttons_2"></th>
                        </tr>
                    </thead>
                </table>
                
                <table>
                    <tbody>
                        <% @users.each do |user| %>
                        <tr>
                            <td class="mob_cell"><%= user.name %></td>
                            <td id="<%= user.id %>_links" class="row_button no_buttons_2">
                                <%= link_to "", user_path(user), class: 'line_show_icon', title: "show full details" %>
                            	<% if user.locked_at? %>
                            		<%= row_unlock_link(user, 'show') %>
                            	<% else %>
                            		<%= row_unlock_link(user, 'hidden') %>
                            	<% end %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
               
            </div>
        </div>
    </div>
</div>
<div class="page_title">
    <h1>List of Companies</h1>
</div>


 <div class="table_content_with_title">
    <table>
      <thead>
        <tr>
          <th class="mob_cell">Name</th>
          <th width="20px" class="row_button"></th>
          <th width="20px" class="row_button"><%= link_to "", new_user_path, class: 'line_edit_icon', title: "create new account" %></th>
        </tr>
      </thead>
    </table>
    <div class="table_container">
        <table>
          <tbody>
            <% @companies.each do |company| %>
              <tr>
                <td class="mob_cell"><%= company.name %></td>
                <td class="tab_cell"><%= company.subdomain %></td>
                <td width="20px" class="row_button"><%= link_to '', edit_company_path(company), class: 'line_edit_icon', title: "move down" %></td>
                <td width="20px" class="row_button"><%= link_to '', company, method: :delete, data: { confirm: 'Are you sure?' }, class: 'line_delete_icon', title: "delete tile"  %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
</div>


<h1>Listing Employees</h1>

<table class="table table-striped table-hover" style="width : 100%" >
  <thead>
    <tr>
      <th>Name</th>
      <th width = 60px ></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td>
            <div class="btn-group-xs">
            <%= link_to 'Show', user_path(user), :class => "btn btn-primary" %>
      </tr>
    <% end %>
  </tbody>
</table>


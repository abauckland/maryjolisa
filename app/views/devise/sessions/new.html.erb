<div class="row">
    <div class="col-1-3 column_1">
        <div class="border">

            <div class="row">
            	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <fieldset>

                    <div class="row">
                        <div class="column_title">
                            <h3>Login</h3>
                        </div>
                    </div>

                    <!-- form input[email] --> 
                    <label class="label_80">E-mail:*</label>
                    <span>
                        <%= f.email_field :email, autofocus: true %>
                    </span></br>

                    <!-- form input[text] -->
                    <label class="label_80">Password:*</label>
                    <span>
                        <%= f.password_field :password, autocomplete: "off" %>
                    </span></br>

                    <!-- link button: full width -->
                    <label class="label_80"></label>
                    <span>
                        <%= f.submit "Sign in", class: "form_button_full"%>
                    </span></br>
                    <% end %>
                                        
                    <%= render "devise/shared/links" %>

               </fieldset>
            </div>
        </div>
    </div>

    <div class="col-1-3 column_2">
        <div class="border">

            <div class="row">
                <div class="column_title">
                    <h3>Create an Account</h3>
                </div>
            </div>

        </div>
    </div>
    <div class="col-1-3 column_3">
        <div class="border blank_column">
        </div>
    </div>
</div>
<h1>Listing plans</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Braintree</th>
      <th>Email</th>
      <th>Website</th>
      <th>Books</th>
      <th>Creditunion</th>
      <th>Ecommerce</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.name %></td>
        <td><%= plan.price %></td>
        <td><%= plan.braintree_id %></td>
        <td><%= plan.email %></td>
        <td><%= plan.website %></td>
        <td><%= plan.books %></td>
        <td><%= plan.creditunion %></td>
        <td><%= plan.ecommerce %></td>
        <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<div class="page_title">
    <h1>Listing Help Annotation</h1>
</div>


 <div class="table_content_with_title">
    <table>
      <thead>
        <tr>
          <th>Item</th>
          <th>Help Text</th>
          <th width="20px" class="row_button">
            <%= link_to "", new_help_path, class: 'line_new_icon', title: "create new help item" %>
          </th>
        </tr>
      </thead>
    </table>
    <div class="table_container">
        <table>
          <tbody>
            <% @helps.each do |help| %>
              <tr>
                <td class="mob_cell"><%= help.item %></td>
                <td class="mob_cell"><%= help.text %></td>
                <td width="20px" class="row_button"><%= link_to "", edit_help_path(help), class: 'line_edit_icon', title: "edit help text" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
</div>

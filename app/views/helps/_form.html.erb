<script src="//tinymce.cachefly.net/4.1/tinymce.min.js"></script>
<script>tinymce.init({
    selector:'textarea',
    menubar : false,
    statusbar : false,
    height : 300,
    toolbar: ["fontselect fontsizeselect","bold italic underline bullist numlist"]
});</script>


<div class="content">
    <div class="column_1">
        <div class="column_content">

            <% if @help.errors.any? %>
            <div class="column_error">
            <p><%= pluralize(@help.errors.count, "error") %> prohibited this detail from being saved:</p>
                  <ul>
                  <% @help.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
            </div>
            <% end %>

            <div class="column_sub_content">
                <div class="column_form">
                <%= form_for(@help) do |f| %>
                    <%= f.hidden_field :company_id, :value => current_user.company_id %>    
                        <div class="column_form_item">
                            <label class="column_form_label" style="width:90px">Item class name:</label>                        
                            <div class="column_form_input"><%= f.text_field :item %></div>
                        </div>
                    
                        <div class="column_form_item">
                            <label class="column_form_label" style="width:90px">Help Text:</label>                        
                            <div class="column_form_input help_textarea"><%= f.text_area :text, class: "widgEditor" %></div>
                        </div>
                </div>
           </div>     
                
           <div class="column_footer">
                <div class="column_line"></div>
                <div class="column_submit"><%= f.submit "save"%></div>
                <div class="column_cancel"><%= link_to "cancel", main_app.helps_path %></div>                
                <% end %>
           </div>
            
        </div>
    </div>
    <div class="column_2 column_2_blank"></div> 
    <div class="column_3 column_3_blank"></div> 
</div>


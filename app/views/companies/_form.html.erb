<div class="content">
    <div class="column_linked_container">
           
        <% if @company.errors.any? %>
            <div class="column_error">
                <p><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</p>
                <ul>
                    <% @company.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>

        <%= form_for(@company, :html => {:multipart => true} ) do |f| %>
     
        <div class="sub_column_linked_1">
                 <div class="column_content">
                        <div class="column_form">

                            <div class="column_form_item">
                                <label class="column_form_label" style="width:100px">Company Name:</label>                        
                                <div class="column_form_input"><%= f.text_field :name %></div>
                                <div class="column_help_tooltip" id="company_name"></div>  
                            </div>
                            <div class="column_form_item">
                                <label class="column_form_label" style="width:100px">Logo:</label>                        
                            <% if @company.logo? %>
                                <div class="column_form_input"><%= image_tag(@company.logo_url(:thumb), {:height => "25px"}) %></div>
                            </div>                                                        
                            <div class="column_form_item">
                                <label class="column_form_label" style="width:100px"></label>
                            <% end %>                          
                                <div class="column_form_input"><%= f.file_field :logo %></div>
                                <div class="column_help_tooltip" id="company_logo"></div> 
                            </div>

                        </div>
                </div>
        </div>
        <div class="sub_column_linked_2">
            <div class="column_content">
                <div class="column_form">
    
                            <div class="column_form_item">
                                <label class="column_form_label" style="width:100px">Address Line 1:</label>                        
                                <div class="column_form_input"><%= f.text_field :address_1 %></div>
                                <div class="column_help_tooltip" id="company_address_2"></div>   
                            </div>
                            <div class="column_form_item">
                                <label class="column_form_label" style="width:100px">Address Line 2:</label>                        
                                <div class="column_form_input"><%= f.text_field :address_2 %></div>
                                <div class="column_help_tooltip" id="company_address_2"></div>    
                            </div>
                            <div class="column_form_item">
                                <label class="column_form_label" style="width:100px">Town/City:</label>                        
                                <div class="column_form_input"><%= f.text_field :city %></div>
                                <div class="column_help_tooltip" id="company_city"></div>     
                            </div>
                            <div class="column_form_item">
                                <label class="column_form_label" style="width:100px">County:</label>                        
                                <div class="column_form_input"><%= f.text_field :county %></div>
                                <div class="column_help_tooltip" id="company_county"></div>    
                            </div>                                       
                            <div class="column_form_item">
                                <label class="column_form_label" style="width:100px">Postcode:</label>                        
                                <div class="column_form_input"><%= f.text_field :postcode %></div>
                                <div class="column_help_tooltip" id="company_postcode"></div>    
                            </div>
                            <div class="column_form_item">
                                <label class="column_form_label" style="width:100px">Telephone No:</label>                        
                                <div class="column_form_input"><%= f.text_field :tel %></div>
                                <div class="column_help_tooltip" id="company_tel"></div>    
                            </div>
                            <div class="column_form_item">
                                <label class="column_form_label" style="width:100px">Telephone No:</label>                        
                                <div class="column_form_input"><%= f.text_field :alt_tel %></div>
                                <div class="column_help_tooltip" id="company_alt_tel"></div>     
                            </div>
                            <div class="column_form_item">
                                <label class="column_form_label" style="width:100px">Email:</label>                        
                                <div class="column_form_input"><%= f.text_field :email %></div>
                                <div class="column_help_tooltip" id="company_email"></div>     
                            </div>
                            
                        </div>
                </div>     
        </div>
    
        <div class="sub_column_linked_3">
            <div class="column_content">                
                <div class="column_form">
                        
                    <div class="column_form_item">
                        <label class="column_form_label" style="width:100px">Registration No:</label>                        
                        <div class="column_form_input"><%= f.text_field :reg_no  %></div>
                        <div class="column_help_tooltip" id="company_reg_no"></div>  
                    </div>
                    <div class="column_form_item">
                        <label class="column_form_label" style="width:100px">VAT No:</label>                        
                        <div class="column_form_input"><%= f.text_field :vat_no  %></div>
                        <div class="column_help_tooltip" id="company_vat_no"></div>  
                    </div>
                                            
                </div>
            </div>     
        </div>
         
        <div class="column_linked_footer">
            <div class="column_line"></div>
            <div class="column_submit"><%= f.submit "save" %></div>

                <% if current_user.admin? %>
                    <div class="column_cancel"><%= link_to "cancel", companies_path %></div>
                <% else %>
                    <div class="column_cancel"><%= link_to "cancel", dashboards_path %></div>
                <% end %>

            <% end %>
        </div>
            
    </div>
</div>

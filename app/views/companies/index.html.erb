<h1>Listing companies</h1>

<table class="table table-striped table-hover" style="width : 100%" >
  <thead>
    <tr>
      <th>Name</th>
      <th width = 60px ></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.subdomain %></td>
        <td>
            <div class="btn-group-xs">
            <%= link_to 'Show', company, :class => "btn btn-primary" %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_user_registration_path, :class => "btn btn-primary"  %>
